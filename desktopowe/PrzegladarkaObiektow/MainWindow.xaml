<Window x:Class="PrzegladarkaObiektow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrzegladarkaObiektow"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="450" FontSize="18">
    <StackPanel>
        <Button Click="wczytajDane" Content="Wczytaj dane" Width="140" Height="50" Margin="10"/>
        <Image x:Name="imgPracownik" Source="/img/1-foto.jpg" Margin="10"/>
        <Label x:Name="lbImie" Content="Pracownik:" HorizontalAlignment="Center"/>
        <Label x:Name="lbZawod" Content="Zawód:" HorizontalAlignment="Center"/>
        <Label x:Name="lbPlaca" Content="Płaca:" Foreground="Green" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="poprzedniPracownik" Content="Poprzedni" Margin="5" Width="100" Height="50"/>
            <Button Click="nastepnyPracownik" Content="Następny" Margin="5" Width="100" Height="50"/>
        </StackPanel>
    </StackPanel>
</Window>
